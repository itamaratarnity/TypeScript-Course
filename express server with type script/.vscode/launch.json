{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Express TS",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/src/index.ts"],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
